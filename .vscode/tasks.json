{
    "tasks": [
        {
            "label": "CMake Configure Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build/debug",
                "-G",
                "Unix Makefiles",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake Configure Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                ".",
                "-B",
                "build/release",
                "-G",
                "Unix Makefiles"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "CMake Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/release"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "Build and Run",
            "type": "shell",
            "command": "gnome-terminal",
            "args": [
                "--", "bash", "-c",
                "./${fileBasenameNoExtension} ${input:programArgs}",
            ],
            "dependsOn": [
                "CMake Configure Release","CMake Build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}/build/release"
            },
        },
        {
            "label": "Build and Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build/debug",
                "--config",
                "Debug" 
            ],
            "dependsOn": [
                "CMake Configure Debug",
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "isBackground": false,
            "presentation": {
                "reveal": "always"
            }
        }
    ],
    "inputs": [
        {
            "id": "programArgs",
            "type": "promptString",
            "description": "Enter arguments for the program",
            "default": "5"
        }
    ],
    "version": "2.0.0"
}